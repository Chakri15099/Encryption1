<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DecryptActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/plainbg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/dmessageTV"
        android:layout_width="300dp"
        android:layout_height="135dp"
        android:background="@drawable/shape"
        android:gravity="center"
        android:hint="Enter message to decrypt"
        android:inputType="textMultiLine"
        android:text="Enter Message to Encrypt"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053" />

    <TextView
        android:id="@+id/dkeyTV"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/shape"
        android:gravity="center"
        android:text="Enter key"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dmessageTV"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/decryptBTN"
        android:layout_width="183dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#20ffffff"
        android:gravity="center"
        android:text="Decrypt"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dkeyTV"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/decryptedmessageTV"
        android:layout_width="300dp"
        android:layout_height="135dp"
        android:layout_marginTop="59dp"
        android:background="@drawable/shape"
        android:gravity="center"
        android:text="Decrypted Message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decryptBTN"
        app:layout_constraintVertical_bias="0.0" />
    <Button
        android:id="@+id/enewmsgBTN"
        android:layout_width="211dp"
        android:layout_height="61dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="#20ffffff"
        android:gravity="center"
        android:text="Encyrpt a new message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decryptedmessageTV"
        app:layout_constraintVertical_bias="0.68" />

    <Button
        android:id="@+id/dsendBTN"
        android:layout_width="166dp"
        android:layout_height="59dp"
        android:layout_marginStart="300dp"
        android:backgroundTint="#20ffffff"
        android:gravity="center"
        android:text="Send a new message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />


</androidx.constraintlayout.widget.ConstraintLayout>